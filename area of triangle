import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        System.out.println("enter the first edge:");
        float edge_a = scn.nextFloat();
        System.out.println("enter the second edge:");
        float edge_b = scn.nextFloat();
        System.out.println("enter the angle between:");
        float angle = scn.nextFloat();
        float area = (float) ((edge_a * edge_b * Math.sin(angle)) / 2);
        System.out.println("the area of the triangle is " + area);
    }
}
